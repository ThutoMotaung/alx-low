NAME = school
CC = gcc
CFLAGS = -Wall -Werror -Wextra -pedantic
RM = /bin/rm -f

SRC = main.c school.c
OBJ = $(SRC:.c=.o)
HEADER = m.h

.PHONY: all clean oclean fclean re

all: $(NAME)

$(NAME): $(OBJ)
	$(CC) $(OBJ) -o $(NAME)

%.o: %.c $(HEADER)
	$(CC) $(CFLAGS) -c $< -o $@

clean:
	$(RM) $(OBJ) $(NAME) *~ $(HEADER).gch

oclean:
	$(RM) $(OBJ)

fclean: clean oclean

re: fclean all

